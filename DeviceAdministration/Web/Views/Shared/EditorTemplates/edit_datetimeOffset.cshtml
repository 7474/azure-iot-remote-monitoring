@using GlobalResources
@model string

<input type="text" class="medium datetime dateoffset" placeholder="YYYY-MM-DD" id="@string.Format("{0}_{1}", ViewData["Suffix"], "date")" data-bound-to="@ViewData.TemplateInfo.HtmlFieldPrefix" />
<input type="text" class="small timeoffset" placeholder="HH:mm:ss" id="@string.Format("{0}_{1}", ViewData["Suffix"], "time")" data-bound-to="@ViewData.TemplateInfo.HtmlFieldPrefix" />
<select class=" small timezone" id="@string.Format("{0}_{1}", ViewData["Suffix"], "timezone")" data-bound-to="@ViewData.TemplateInfo.HtmlFieldPrefix">
    <option value="local">@Strings.Local</option>
    <option value="UTC">@Strings.UTC</option>
</select>
@Html.HiddenFor(m => m, new
{
    data_date_bound = string.Format("{0}_{1}", ViewData["Suffix"], "date"),
    data_time_bound = string.Format("{0}_{1}", ViewData["Suffix"], "time"),
    data_timezone_bound = string.Format("{0}_{1}", ViewData["Suffix"], "timezone"),
    @class = "dateTimeValue"
})